<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Activities.SplashScreenActivity"
                android:background="#8165B8">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="252dp"
            android:layout_height="263dp"
            android:id="@+id/splash_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/payment"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/progressBar" android:layout_marginTop="103dp" android:layout_below="@+id/splash_logo"
            android:layout_marginLeft="150dp"/>
    <TextView
            android:text="Citizen Bank of India"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp" android:textSize="26sp" android:textStyle="bold"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="75dp" android:layout_marginEnd="75dp" android:textColor="#FFFFFF"/>

</RelativeLayout>